<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/gmts_padding_outer_large"
    android:paddingLeft="@dimen/gmts_padding_outer_large"
    android:paddingEnd="@dimen/gmts_padding_outer_large"
    android:paddingRight="@dimen/gmts_padding_outer_large"
    android:paddingTop="@dimen/gmts_padding_outer_default"
    android:paddingBottom="0dp">

  <TextView
      android:id="@+id/gmts_disclaimer_body"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toTopOf="@+id/gmts_checkbox"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginBottom="@dimen/gmts_padding_outer_default"
      android:textAppearance="@style/gmts_FontBody1"
      android:text="@string/gmts_disclaimer_text"/>

  <CheckBox
      android:id="@+id/gmts_checkbox"
      app:layout_constraintTop_toBottomOf="@id/gmts_disclaimer_body"
      app:layout_constraintStart_toStartOf="@id/gmts_disclaimer_body"
      app:layout_constraintBottom_toBottomOf="parent"
      android:buttonTint="@drawable/gmts_cb_selector"
      android:theme="@style/gmts_TintedCheckBox"
      android:paddingEnd="@dimen/gmts_padding_content_default"
      android:paddingRight="@dimen/gmts_padding_content_default"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

  <TextView
      android:id="@+id/gmts_confirmation_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="@id/gmts_checkbox"
      app:layout_constraintStart_toEndOf="@id/gmts_checkbox"
      android:layout_marginTop="@dimen/gmts_padding_content_medium"
      android:textColorLink="@color/gmts_blue"
      android:textAppearance="@style/gmts_FontBody1"
      android:linksClickable="true"
      android:text="@string/gmts_disclaimer_confirmation"/>


</androidx.constraintlayout.widget.ConstraintLayout>
