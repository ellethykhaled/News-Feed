<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gmts_light_text"
    android:padding="@dimen/gmts_padding_outer_large"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

  <ImageView
      android:id="@+id/gmts_image_view"
      android:maxHeight="28dp"
      android:minHeight="28dp"
      android:src="@drawable/gmts_quantum_ic_warning_white_24"
      android:background="@drawable/gmts_blank_bg_radius"
      android:tint="@color/gmts_warning"
      android:paddingLeft="@dimen/gmts_ad_load_image_padding_sides"
      android:paddingRight="@dimen/gmts_ad_load_image_padding_sides"
      android:paddingTop="@dimen/gmts_ad_load_image_padding_top_bottom"
      android:paddingBottom="@dimen/gmts_ad_load_image_padding_top_bottom"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      />

  <TextView
      android:id="@+id/gmts_title_text"
      android:text="@string/gmts_not_tested_title"
      android:textAlignment="center"
      android:gravity="center"
      android:textAppearance="@style/gmts_FontHeadline2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/gmts_padding_outer_small"
      />

  <TextView
      android:id="@+id/gmts_detail_text"
      android:text=""
      android:textAlignment="center"
      android:gravity="center"
      android:linksClickable="true"
      android:textAppearance="@style/gmts_FontBody3"
      android:layout_marginTop="@dimen/gmts_padding_content_default"
      android:layout_marginBottom="0dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  <Button
      android:id="@+id/gmts_action_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/gmts_BlueButton"
      android:text="@string/gmts_button_load_ad"
      android:layout_marginTop="@dimen/gmts_padding_outer_default"
      android:layout_marginBottom="0dp"
      />

  <FrameLayout
      android:id="@+id/gmts_ad_view_frame"
      android:layout_marginTop="@dimen/gmts_padding_outer_default"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
     />

  <include layout="@layout/gmts_view_native_assets"
      android:id="@+id/gmts_native_assets"
      android:visibility="gone"/>

</LinearLayout>
