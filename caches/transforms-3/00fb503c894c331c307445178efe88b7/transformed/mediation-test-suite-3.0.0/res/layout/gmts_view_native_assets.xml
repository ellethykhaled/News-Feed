<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/gmts_padding_outer_default"
    android:paddingBottom="@dimen/gmts_padding_outer_default"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/gmts_title_text"
        android:text="@string/gmts_retrieved_assets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/gmts_FontNativeAssetsHeadline"
        android:paddingBottom="@dimen/gmts_padding_outer_small"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/gmts_detail_text"
        android:text="@string/gmts_native_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/gmts_FontNativeAssets"
        app:layout_constraintTop_toBottomOf="@id/gmts_title_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
