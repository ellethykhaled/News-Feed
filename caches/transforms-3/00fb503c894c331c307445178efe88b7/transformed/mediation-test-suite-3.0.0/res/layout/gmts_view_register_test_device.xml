<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/gmts_CardView.Padding"
    app:cardElevation="0.25dp"
    app:cardMaxElevation="0.25dp"
    >
  <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingStart="@dimen/gmts_padding_outer_default"
      android:paddingEnd="@dimen/gmts_padding_outer_small"
      android:paddingTop="@dimen/gmts_padding_outer_default"
      android:paddingBottom="@dimen/gmts_padding_outer_small"
      >

    <ImageView
        android:id="@+id/gmts_register_image"
        android:background="@drawable/gmts_circle"
        android:src="@drawable/gmts_quantum_ic_visibility_white_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/gmts_register_image_padding"
        android:layout_width="@dimen/gmts_register_image_size"
        android:layout_height="@dimen/gmts_register_image_size" />

    <TextView
        android:id="@+id/gmts_title_text"
        app:layout_constraintStart_toEndOf="@id/gmts_register_image"
        app:layout_constraintTop_toTopOf="@id/gmts_register_image"
        app:layout_constraintBottom_toTopOf="@+id/gmts_detail_text"
        android:layout_marginStart="@dimen/gmts_padding_outer_default"
        android:layout_marginLeft="@dimen/gmts_padding_outer_default"
        android:layout_marginEnd="@dimen/gmts_padding_outer_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textAppearance="@style/gmts_FontHeadline4"
        android:textColor="@color/gmts_dark_text_primary"
        android:text="@string/gmts_register_device_title"
        />

    <TextView
        android:id="@+id/gmts_detail_text"
        app:layout_constraintStart_toStartOf="@id/gmts_title_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gmts_title_text"
        android:paddingTop="@dimen/gmts_register_detail_top_padding"
        android:layout_marginEnd="@dimen/gmts_padding_outer_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textAppearance="@style/gmts_FontHeadline6"
        android:textColor="@color/gmts_google_grey800"
        android:text="@string/gmts_register_device_detail"/>

    <Button
        android:id="@+id/gmts_register_button"
        app:layout_constraintTop_toBottomOf="@id/gmts_detail_text"
        app:layout_constraintEnd_toStartOf="@+id/gmts_dismiss_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/gmts_ButtonPadded"
        android:text="@string/gmts_register_device_button"
        android:textAllCaps="false"
        android:textColor="@color/gmts_blue"
        android:layout_marginTop="@dimen/gmts_padding_outer_small"
        android:layout_marginBottom="0dp"
        />

    <Button
        android:id="@+id/gmts_dismiss_button"
        app:layout_constraintTop_toBottomOf="@id/gmts_detail_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/gmts_ButtonPadded"
        android:text="@string/gmts_register_device_dismiss"
        android:textColor="@color/gmts_blue"
        android:textAllCaps="false"
        android:layout_marginLeft="@dimen/gmts_padding_outer_default"
        android:layout_marginStart="@dimen/gmts_padding_outer_default"
        android:layout_marginTop="@dimen/gmts_padding_outer_small"
        android:layout_marginBottom="0dp"
        />

  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView >
